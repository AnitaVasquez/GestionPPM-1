@model IEnumerable<GestionPPM.Entidades.Modelo.PlaceToPay.TrackingComercioInfo>

<script>

    $(document).ready(function () {
        $("#seccion-titulo-modal").text('@Html.Raw(ViewBag.TituloModal)');
    });

</script>
<style>
    /* Important part */
    .modal-dialog {
        overflow-y: initial !important
    }

    .modal-body {
        height: 460px;
        overflow-y: auto;
    }
</style>

<div class="col-md-12">
    <div class="col-lg-12 seccion-detalles-caso">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 id="texto-informacion-principal" class="box-title">FASES O ESTADOS GXC </h3>
            </div>
            <div class="box-body">

                <div class="row fila-seccion">
                    <div class="col-md-12">
                        <table class="table table-hover table-fixed table-responsive table-bordered">
                            <thead style="background-color: #00AD8E;color: white;">
                                <tr>
                                    <th style="text-align: center;">
                                        FECHA
                                    </th>
                                    <th style="text-align: center;">
                                        PRODUCTO
                                    </th>
                                    <th style="text-align: center;">
                                        FASE
                                    </th>
                                    <th style="text-align: center;">
                                        OBSERVACIONES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (!Model.Any())
                                    {
                                        <tr>
                                            <td style="text-align: center;" colspan="4">@Mensajes.MensajeNoDataListado</td>
                                        </tr>
                                    }
                                }

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaContacto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Producto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fase)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Observacion)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
