<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 id="texto-informacion-principal" class="box-title">@ViewBag.TituloPanelDetalle</h3>

            @*<div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>*@
        </div>

        <div class="box-body">
            <div class="row fila-seccion">
                <div class="col-md-12">
                    <table class="table table-responsive" id="tbl-DetallesMids">
                        <thead>
                            <tr>
                                <th data-override="IDMidsComerciosPlaceToPay">ID</th>
                                <th data-override="MID">MID@*<label id="lblMID"  required>MID</label>*@</th>
                                <th data-override="Producto">Producto@*<label id="lblProducto">Producto</label>*@</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateMIDS">
                                <td><input type="text" class="form-control idObjeto" value="0" name="IDMidsComerciosPlaceToPay[]" /></td>

                                <td><input type="text" class="form-control field-row-required" placeholder="MID" name="MID[]" id="DetalleMID" maxlength="150" /></td>

                                <td><input type="text" class="form-control field-row-required" placeholder="Producto" name="Producto[]" id="DetalleProducto" maxlength="150" /></td>

                                <td id="accion">
                                    <button type="button" class="agregarFila btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                </td>
                            </tr>

                            @foreach (var item in ViewBag.ListadoDetalles)
                            {
                                <tr id="templateMIDS-@item.IDMidsComerciosPlaceToPay">
                                    <td>
                                        <input type="text" class="form-control" value="@item.IDMidsComerciosPlaceToPay" name="IDMidsComerciosPlaceToPay[]" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" value="@item.MID" name="MID[]" maxlength="150" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" value="@item.Producto" name="Producto[]" maxlength="150" />
                                    </td>

                                    <td id="accion"><button type="button" onclick="eliminarFila(this)" id="eliminar-@item.IDMidsComerciosPlaceToPay" class="eliminarFila btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

